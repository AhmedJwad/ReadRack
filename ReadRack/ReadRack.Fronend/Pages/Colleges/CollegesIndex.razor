@page "/colleges"
<Grid TItem="College"
      Class="table table-hover table-bordered table-striped"
      DataProvider="CollegeDataProvider"
      AllowFiltering="true"
      AllowPaging="true"
      PageSize="5"
      AllowSorting="true"
      AllowSelection="true"
      SelectionMode="GridSelectionMode.Multiple"
      SelectedItemsChanged="OnSelectedItemsChanged"
      Responsive="true">

    <GridColumns>
        <GridColumn TItem="College" HeaderText="Id" PropertyName="Id" SortKeySelector="item => item.Id">
            @context.Id
        </GridColumn>
        <GridColumn TItem="College" HeaderText="College Name" PropertyName="Name" SortKeySelector="item => item.Name">
            @context.Name
        </GridColumn>
        <GridColumn TItem="College" HeaderText="photo" PropertyName="photo" SortKeySelector="item => item.Photo">
            @context.Photo
        </GridColumn>
        
    </GridColumns>

</Grid>

<div class="mt-3">
    Selected Items Count: @selectedColleges.Count
</div>

<div class="mt-2">
    Selected Employees:
    <ul>
        @foreach (var emp in selectedColleges)
        {
            <li>@emp.Name</li>
        }
    </ul>
</div>